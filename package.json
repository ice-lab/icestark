{
  "name": "@ice/stark",
  "version": "2.7.0",
  "description": "Icestark is a JavaScript library for multiple projects, Ice workbench solution.",
  "scripts": {
    "install:deps": "rm -rf node_modules && rm -rf ./packages/*/node_modules && yarn install && lerna exec -- npm install",
    "publish:packages": "ts-node ./scripts/publish.ts",
    "build": "rm -rf lib && tsc",
    "watch": "tsc -w",
    "prepublishOnly": "npm run lint && npm run test && npm run build",
    "lint": "eslint --cache --ext .ts,.tsx ./ && tsc --noEmit",
    "test": "NODE_ENV=unittest jest",
    "coverage": "codecov"
  },
  "main": "lib/index.js",
  "module": "lib/index.js",
  "types": "lib/index.d.ts",
  "files": [
    "lib"
  ],
  "license": "MIT",
  "keywords": [
    "ice",
    "react",
    "microfrontends"
  ],
  "bugs": {
    "url": "https://github.com/alibaba/ice/issues"
  },
  "homepage": "https://github.com/ice-lab/icestark",
  "husky": {
    "hooks": {
      "pre-commit": "tsc --noEmit && lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "git add"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ice-lab/icestark.git"
  },
  "peerDependencies": {
    "react": ">=15.0.0"
  },
  "dependencies": {
    "@ice/sandbox": "^1.0.4",
    "lodash.isempty": "^4.4.0",
    "lodash.isequal": "^4.5.0",
    "path-to-regexp": "^1.7.0",
    "url-parse": "^1.1.9"
  },
  "devDependencies": {
    "@commitlint/cli": "^7.5.2",
    "@commitlint/config-conventional": "^7.5.0",
    "@iceworks/spec": "^1.3.2",
    "@testing-library/jest-dom": "^4.2.3",
    "@testing-library/react": "^9.3.2",
    "@types/jest": "^24.0.12",
    "@types/node": "^12.0.0",
    "@types/path-to-regexp": "^1.7.0",
    "@types/react": "^16.8.19",
    "@types/url-parse": "^1.4.3",
    "codecov": "^3.4.0",
    "eslint": "^7.31.0",
    "husky": "^2.2.0",
    "jest": "^24.7.1",
    "jest-fetch-mock": "^2.1.2",
    "lerna": "^3.22.1",
    "lint-staged": "^10.5.3",
    "react": "^16.7.0",
    "react-dom": "^16.7.0",
    "stylelint": "^10.1.0",
    "ts-jest": "^24.0.2",
    "ts-node": "^10.2.1",
    "typescript": "^4.3.5",
    "urllib": "^2.36.1"
  },
  "resolutions": {
    "eslint-plugin-import": "2.20.2",
    "@types/testing-library__dom": "7.0.2"
  },
  "jest": {
    "coverageDirectory": "./coverage/",
    "collectCoverage": true,
    "preset": "ts-jest",
    "automock": false,
    "setupFiles": [
      "./setupJest.ts"
    ]
  }
}
